@tailwind base;
@tailwind components;
@tailwind utilities;

/* Definition of the design system. All colors, gradients, fonts, etc should be defined here. 
All colors MUST be HSL.
*/

@layer base {
  :root {
    /* Eric Moreira Brand Colors */
    --background: 237 35% 99%; /* Off-white #F8F9FF */
    --foreground: 215 35% 11%; /* Preto profundo #11151C */

    --card: 0 0% 100%;
    --card-foreground: 215 35% 11%;

    --popover: 0 0% 100%;
    --popover-foreground: 215 35% 11%;

    --primary: 212 28% 22%; /* Azul petr√≥leo #293041 */
    --primary-foreground: 237 35% 99%;

    --secondary: 180 3% 54%; /* Cinza neutro #878D8D */
    --secondary-foreground: 237 35% 99%;

    --muted: 220 13% 95%;
    --muted-foreground: 180 3% 54%;

    --accent: 43 18% 62%; /* Acento suave discreto */
    --accent-foreground: 215 35% 11%;

    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 237 35% 99%;

    --border: 220 13% 91%;
    --input: 220 13% 91%;
    --ring: 212 28% 22%;

    --radius: 0.75rem;

    /* Custom brand variables */
    --petrol-blue: 212 28% 22%;
    --neutral-gray: 180 3% 54%;
    --deep-black: 215 35% 11%;
    --soft-gold: 43 18% 62%;

    --sidebar-background: 0 0% 98%;
    --sidebar-foreground: 240 5.3% 26.1%;
    --sidebar-primary: 240 5.9% 10%;
    --sidebar-primary-foreground: 0 0% 98%;
    --sidebar-accent: 240 4.8% 95.9%;
    --sidebar-accent-foreground: 240 5.9% 10%;
    --sidebar-border: 220 13% 91%;
    --sidebar-ring: 217.2 91.2% 59.8%;
  }

  .dark {
    --background: 215 35% 11%; /* Deep black */
    --foreground: 237 35% 99%;

    --card: 212 28% 18%;
    --card-foreground: 237 35% 99%;

    --popover: 212 28% 18%;
    --popover-foreground: 237 35% 99%;

    --primary: 237 35% 99%;
    --primary-foreground: 212 28% 22%;

    --secondary: 180 3% 35%;
    --secondary-foreground: 237 35% 99%;

    --muted: 212 28% 25%;
    --muted-foreground: 180 3% 65%;

    --accent: 43 18% 62%;
    --accent-foreground: 237 35% 99%;

    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 237 35% 99%;

    --border: 212 28% 25%;
    --input: 212 28% 25%;
    --ring: 237 35% 99%;
    
    --sidebar-background: 240 5.9% 10%;
    --sidebar-foreground: 240 4.8% 95.9%;
    --sidebar-primary: 224.3 76.3% 48%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 240 3.7% 15.9%;
    --sidebar-accent-foreground: 240 4.8% 95.9%;
    --sidebar-border: 240 3.7% 15.9%;
    --sidebar-ring: 217.2 91.2% 59.8%;
  }
}

@layer base {
  * {
    border-color: hsl(var(--border));
  }

  body {
    background-color: hsl(var(--background));
    color: hsl(var(--foreground));
    font-family: var(--font-work-sans), 'Work Sans', system-ui, -apple-system, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-bebas-neue), 'Bebas Neue', system-ui, sans-serif;
  }
}
